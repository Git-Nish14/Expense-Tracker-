generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String    @id @default(auto()) @map("_id") @db.ObjectId
    firstName String
    lastName  String
    email     String    @unique
    password  String
    budget    Float     @default(0.0) // Added Budget
    income    Float     @default(0.0) // Added Income
    expenses  Expense[]
}

model Expense {
    id       String   @id @default(auto()) @map("_id") @db.ObjectId
    title    String
    amount   Float
    category String // Added Category
    type     String
    date     DateTime
    user     User     @relation(fields: [userId], references: [id])
    userId   String   @db.ObjectId
}
